#main-debug-bar {
	color: #52585D;
	position:relative;
	z-index: 100000;
}

#main-debug-bar h1 {
	font: 20px arial,lucida,helvetica,arial,sans-serif;
	-moz-box-shadow: inset 0 1px 0 rgba(255,255,255,0.40);
	-webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,0.40);
	-moz-box-shadow: inset 0 1px 0 rgba(255,255,255,0.40);
	-webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,0.40);
	box-shadow: inset 0 1px 0 rgba(255,255,255,0.40);
	background: #F4F4F4;
	background: -webkit-gradient(linear,left top,left bottom,from(#F4F4F4),to(gainsboro));
	background: -moz-linear-gradient(top,#F4F4F4,gainsboro);
	background: linear-gradient(top,#F4F4F4,gainsboro);
	padding: 0 5px;
	margin: 0;
	text-align: center;
	height: 40px;
	line-height: 40px;
	border-bottom: 1px solid #C7C7C7;
	
	font-weight: normal;
	text-shadow: 0 1px 0 white;
	display: block;
	
	-webkit-margin-before: 0.83em;
	-webkit-margin-after: 0.83em;
	-webkit-margin-start: 0px;
	-webkit-margin-end: 0px;
	
	margin: 0px;
	color:#666666 !important;
}

#main-debug-bar select {
	position: absolute;
	top: 11px;
	right: 11px;
}

body 
{
	background-position: 0px 41px;
}