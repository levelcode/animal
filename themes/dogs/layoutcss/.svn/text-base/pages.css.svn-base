@charset "utf-8";
/* CSS Document */

/*-------------------------------------------------------------	
	Description:	Thanks
	-----------------------------------------------------------	
*/
.thanks {
	padding: 3.3%;
}
.thanks h2 {
	color: #FFF;
	font-size: 3em;
	font-weight: bold;
	margin: 8% 0 6%;
	text-align: center;
}
.thanks p {
	text-align: center
}
.thanks p.text {
	text-align: left;
}
.thanks .tell {
	margin: 0 auto;
	overflow: hidden;
}
.thanks .tell p {
	padding: 5px 15px;
	text-align: center
}
.thanks p.ptell {
	color: #f4bb59;
	font-size: 1.8em;
	font-weight: bold;
	text-transform: uppercase;
}
.thanks .tell .share {
	height: 38px;
	width: 150px;
	margin: 0 auto 3em;
}
.thanks .tell .share a {
	background: url(../images/buttons/btns_share.png) no-repeat;
	display: block;
	float: left;
	height: 37px;
	overflow: hidden;
	text-indent: -999px;
	width: 37px;
}
.thanks .tell .share a.facebook {
	background-position: 0 0;
}
.thanks .tell .share a.twitter {
	background-position: -40px 0;
	margin: 0 19px;
}
.thanks .tell .share a.googleplus {
	background-position: -80px 0;
}
.thanks .tell .share a.facebook:hover {
	background-position: 0px -40px;
}
.thanks .tell .share a.twitter:hover {
	background-position: -40px -40px;
}
.thanks .tell .share a.googleplus:hover {
	background-position: -80px -40px;
}
.thanks .boxes_grey {
	margin: 0 0 2em;
	overflow: hidden;
}
.thanks .boxes_grey > div {
	display: inline-block;
	height: 250px;
	float: right;
	max-width: 300px;
}
.thanks .boxes_grey > div:first-child {
	float: left;
}
.thanks .boxes_grey > div p {
	color: #6A6A6A;
	display: block;
	font-size: 1.6em;
	margin: 35% auto 0;
	width: 70%;
}
.thanks .boxes_grey.small > div {
	height: auto;
	overflow: hidden;
	position: relative;
	width: 100%;
}
.thanks .boxes_grey.small > div {
	display: block;
	float: none;
	margin: 0 auto;
	max-width: 260px;
}
.thanks .boxes_grey.small > div:first-child {
	display: none;
}
.thanks .boxes_grey.small > div:first-child img {
	float: right;
}
.thanks .boxes_grey.small > div ul {
	left: 50%;
	margin: 0 0 0 -60px;
	position: absolute;
	top: 72%;
	width: 120px;
}
.thanks .boxes_grey.small > div ul li {
	float: left;
	margin: 0 0 0 7.75%;
}
.thanks .boxes_grey.small > div ul li:first-child {
	margin: 0;
}
.thanks .boxes_grey.small > div a {
	background: url(../images/buttons/btn.png) no-repeat;
	display: block;
	height: 22px;
	overflow: hidden;
	text-indent: -999px;
	width: 22px;
}
.thanks .boxes_grey.small a.facebook {
	background-position: 0 -830px;
}
.thanks .boxes_grey.small a.twitter {
	background-position: -30px -830px;
}
.thanks .boxes_grey.small a.tumblr {
	background-position: -60px -830px;
}
.thanks .boxes_grey.small a.instagram {
	background-position: -90px -830px;
}
.thanks .boxes_grey.small a.facebook:hover {
	background-position: 0 -860px;
}
.thanks .boxes_grey.small a.twitter:hover {
	background-position: -30px -860px;
}
.thanks .boxes_grey.small a.tumblr:hover {
	background-position: -60px -860px;
}
.thanks .boxes_grey.small a.instagram:hover {
	background-position: -90px -860px;
}
.thanks .download {
	text-align: center;
	margin: 0 auto 6em;
	max-width: 260px;
}
.thanks .download img {
	margin-bottom: 2em;
}
.thanks .download a {
	font-size: 1.1em;
}
.thanks .logos {
	overflow: hidden;
	border-bottom: solid 1px #646262;
	border-top: solid 1px #646262;
	margin: 0;
	padding: 1.5em 15%;
}
.thanks .logos span.logo2 {
	top: 1.5em;
}
.thanks .logos span.logo3 {
	margin-bottom: 0 !important;
}
.thanks + .abrules {
	padding-top: 0;
}
 @media (max-width: 950px) {
.thanks .boxes_grey {
	text-align: center;
}
.thanks .boxes_grey > div,
.thanks .boxes_grey > div:first-child {
	display: block;
	float: none;
	height: auto;
	margin: 0 auto;
}
.thanks .boxes_grey > div:first-child {
	margin: 0 auto 2em;
}
.thanks .boxes_grey.small > div ul {
	left: 50%;
	margin: 0 0 0 -60px;
}
.thanks .boxes_grey.small > div img,
.thanks .boxes_grey.small > div:first-child img {
	float: none;
	margin: 0 auto;
}
}
 @media (max-width: 480px) {
.thanks .tell {
	width: 85.75%;
}
.thanks .download {
	margin-bottom: 3em;
}
}
/*-------------------------------------------------------------	
	Description:	Officials Rules
	-----------------------------------------------------------	
*/
.rules {
	padding: 3.3%;
	word-wrap: break-word;
}
.rules h2 {
	text-align: center
}
.rules p {
	margin: 0 0 1em !important;
}
.rules ul,
.rules ol {
	margin: 0 0 0 2em;
}
.rules ol li ol {
	margin-bottom: 1em;
}
.rules ol li ol li {
	list-style-type: lower-alpha;
	margin-bottom: 0.5em;
}
.rules ol li ol li ol li {
	list-style-type: lower-roman;
}
.rules > ol > li {
	font-size: 1.3em;
}
.rules li {
	margin-bottom: 1em;
	margin-left: 0;
	line-height: 130%;
}
.rules li p {
	font-size: 1em;
	line-height: 130%;
}
.rules li strong span {
	color: #F4BB59;
}
.rules em {
	font-style: italic;
}
.rules a {
	color: #F4BB59;
}
.rules a:hover {
	text-decoration: none;
}
.rules sup {
	font-size: 0.6em;
}
/*-------------------------------------------------------------	
	Description:	Error 404
	-----------------------------------------------------------	
*/

.error_404,
.browser {
	text-align: center;
	padding: 3.3% 3.3% 6.6%;
	overflow: hidden;
}
.browser {
	background: #000;
}
.browser img {
	display: block;
	margin: 3.5% auto 6.8%;
	max-width: 100%;
	max-height: 100%;
}
.error_404 p {
	margin: 0;
	padding: 0;
	text-align: left;
}
.error_404 h3 {
	text-align: center
}

/*-------------------------------------------------------------	
	Description:	Close
	-----------------------------------------------------------	
*/
